{
  "name": "reproduce-orchid",
  "version": "0.0.0",
  "scripts": {
    "check-type": "tsc --noEmit",
    "commit": "cz",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:js": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint:js:fix": "eslint . --cache --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,html,css,md,json}": "prettier --check",
    "**/*.{js,jsx,ts,tsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": "@xstools-dev/prettier-config/base",
  "eslintConfig": {
    "extends": "@xstools-dev/eslint-config/base"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.3.0",
    "@xstools/utility": "^0.17.0",
    "date-fns": "^4.1.0",
    "orchid-orm": "^1.60.5"
  },
  "devDependencies": {
    "@types/bun": "1.3.8",
    "@types/node": "24.10.9",
    "@xstools-dev/mix": "0.18.0",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "neverBuiltDependencies": []
  }
}
